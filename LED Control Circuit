// C++ code

/*
    This program blinks six LEDs one after another.
    Each LED turns ON for a short time, then turns OFF before the next LED turns ON.
*/

// Declare and initialize the variables for the LED pins:
int led1 = 13;  // LED 1 connected to Pin 2
int led2 = 12;  // LED 2 connected to Pin 3
int led3 = 11;  // LED 3 connected to Pin 4
int led4 = 10;  // LED 4 connected to Pin 5
int led5 = 9;  // LED 5 connected to Pin 6
int led6 = 8;  // LED 6 connected to Pin 7

void setup()
{
    /*
    Set each LED pin as an "OUTPUT":
    */
    pinMode(led1, OUTPUT);
    pinMode(led2, OUTPUT);
    pinMode(led3, OUTPUT);
    pinMode(led4, OUTPUT);
    pinMode(led5, OUTPUT);
    pinMode(led6, OUTPUT);

    /*
    Ensure all LEDs are "OFF" at the start:
    */
    digitalWrite(led1, LOW);
    digitalWrite(led2, LOW);
    digitalWrite(led3, LOW);
    digitalWrite(led4, LOW);
    digitalWrite(led5, LOW);
    digitalWrite(led6, LOW);

    /*
    Initialize serial communication at a baud rate of 9600:
    */
    Serial.begin(9600);
}

void loop()
{
    /*
    Blink each LED one after another.
    Each LED will turn ON for 500ms, then turn OFF,
    and then move to the next LED.
    */

    // LED 1
    digitalWrite(led1, HIGH);
    delay(700);
    digitalWrite(led1, LOW);

    // LED 2
    digitalWrite(led2, HIGH);
    delay(700);
    digitalWrite(led2, LOW);

    // LED 3
    digitalWrite(led3, HIGH);
    delay(700);
    digitalWrite(led3, LOW);

    // LED 4
    digitalWrite(led4, HIGH);
    delay(700);
    digitalWrite(led4, LOW);

    // LED 5
    digitalWrite(led5, HIGH);
    delay(700);
    digitalWrite(led5, LOW);

    // LED 6
    digitalWrite(led6, HIGH);
    delay(700);
    digitalWrite(led6, LOW);
}
